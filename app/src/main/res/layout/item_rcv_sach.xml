<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/item__bg_rcv"
    android:padding="6dp"
    android:orientation="horizontal"

    >
    <ImageView
        android:background="@drawable/baseline_menu_book_24"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_sach_maSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ma sach: 1"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_sach_tenSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten sach: lap trinh js"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_sach_giaThue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gia thue: 3000"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_sach_maLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ma loai: 1"
            android:textStyle="bold"
            android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>