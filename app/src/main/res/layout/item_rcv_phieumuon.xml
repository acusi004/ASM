<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/item__bg_rcv"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:gravity="center"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_pm_MaPhieu"
            android:layout_width="710dp"
            android:layout_height="wrap_content"
            android:text="Mã phiếu: 1"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/iv_pm_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_close_24"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pm_thanhVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh vien: Do trung hieu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="5dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="5dp">

       <TextView
           android:id="@+id/tv_pm_tenSach"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ten sach: lap trinh C"
           android:textSize="18sp"
           android:textStyle="bold"
           />

       <TextView
           android:id="@+id/tv_pm_trangThai"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="right"
           android:text="Da tra sach"
           android:textColor="#8BC34A"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_marginRight="40dp"
           />

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_pm_giaThue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tien thue: 2000"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_pm_ngayThue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="ngay thue: 18/05/2023"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginRight="40dp"
            />
    </LinearLayout>



</LinearLayout>